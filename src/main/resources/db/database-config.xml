<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <typeAliases>
        <typeAlias type="nl.capaxit.mybatisexamples.domain.Person" alias="person"/>
        <typeAlias type="nl.capaxit.mybatisexamples.domain.Document" alias="document"/>
        <typeAlias type="nl.capaxit.mybatisexamples.domain.Address" alias="address"/>
        <typeAlias type="nl.capaxit.mybatisexamples.domain.Product" alias="product"/>
    </typeAliases>
    <typeHandlers>
    </typeHandlers>
    <objectFactory type="nl.capaxit.mybatisexamples.objectfactory.DocumentObjectFactory">
    </objectFactory>
    <plugins>
        <plugin interceptor="nl.capaxit.mybatisexamples.dynamicfetchsize.MyInterceptor"></plugin>
    </plugins>
    <environments default="prod">
        <environment id="prod">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="org.h2.Driver"/>
                <property name="url" value="jdbc:h2:mem:test;MODE=PostgreSQL;AUTOCOMMIT=ON"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="db/mapper/person-mapper.xml"/>
        <mapper resource="db/mapper/document-mapper.xml"/>
        <mapper resource="db/mapper/product-mapper.xml"/>
    </mappers>
</configuration>
